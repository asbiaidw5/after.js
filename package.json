{
  "private": true,
  "scripts": {
    "postinstall": "lerna bootstrap",
    "clean": "lerna clean",
    "format":
      "prettier --trailing-comma es5 --single-quote --write 'examples/*/!(node_modules|.after)/**/*.js'  'packages/*/!(node_modules|dist)/**/*.js'",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "eslint": "^4.12.1",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "lerna": "^2.1.2",
    "lint-staged": "^6.0.0",
    "prettier": "^1.9.0"
  },
  "lint-staged": {
    "*.js": ["prettier --trailing-comma es5 --single-quote --write", "git add"]
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/coverage/",
      "<rootDir>/node_modules/",
      "<rootDir>/examples/"
    ],
    "collectCoverageFrom": ["**/*.js"],
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/packages/*/node_modules/",
      "<rootDir>/examples/",
      "<rootDir>/coverage/"
    ]
  }
}
